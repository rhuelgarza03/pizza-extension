{
    "manifest_version": 3,
    "name": "First Extension",
    "description": "feast your eyes on a scrumptious pizza with the click of a button!",
    "version": "1.0",
    "content_scripts": [
        {
            "matches": ["https://*/*"],
            "js": ["./dist/scripts/content.js"]
        }
    ],
    "action": {
        "default_popup": "./src/popup/popup.html"
    }
}
